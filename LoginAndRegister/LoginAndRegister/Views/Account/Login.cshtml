@using LoginAndRegister.Models
@model LoginVM
@{
    ViewBag.Title = "Login";
}

<div class="container" style="margin-top:50px;">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Giriş Paneli
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.DisplayNameFor(x => x.Email)
                    <div class="input-group">
                        @Html.TextBoxFor(x => x.Email, new { @placeholder = "E-Posta adresiniz...", @class = "form-control" })
                        <div class="input-group-addon">
                            <i class="glyphicon glyphicon-user"></i>
                        </div>
                    </div>
                    <div class="text-danger">
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                    <br />

                    @Html.DisplayNameFor(x => x.Password)
                    <div class="input-group">
                        @Html.PasswordFor(x => x.Password, new { @placeholder = "Parolanız...", @class = "form-control" })
                        <div class="input-group-addon">
                            <i class="glyphicon glyphicon-lock"></i>
                        </div>
                    </div>
                    <div class="text-danger">
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                    <br />
                    <div class="checkbox">
                        <label>@Html.CheckBoxFor(x => x.IsPersist) @Html.DisplayNameFor(x => x.IsPersist)</label>
                    </div>
                    <input type="submit" class="btn btn-primary pull-right" value="Giriş Yap" />

                }
            </div>
            <div class="panel-footer">
                <div class="text-danger">
                    @Html.ValidationSummary()
                </div>
            </div>
        </div>
    </div>
</div>

